@model List<BaiTap6>
<partial name="_Notification" />
@if(User.IsInRole("Admin"))
{ 
<div class="row">
    <div class="col-md-6">
        <h2>LIST User - Kho</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Add New
        </a>
        <br>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã Đăng Nhập</th>
            <th>Kho</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.User.Email</td>
            <td>@x.Kho.Ten_Kho</td>
            <td><a asp-action="Edit" asp-route-Id="@x.Id"class="btn btn-primary">Edit</a></td>
            <td><a asp-action="Delete" asp-route-Id="@x.Id"class="btn btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
}else{
    <h1>Không có quyền truy cập</h1>
}