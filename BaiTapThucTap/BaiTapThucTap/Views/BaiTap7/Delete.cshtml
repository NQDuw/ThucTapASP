@model ViewModelBai7

@if (User.IsInRole(SD.Role_Admin))
{
    <form asp-action="DeleteConfirmed" method="post">
        <h2>Xác nhận xóa</h2>
        <hr />
        <div class="form-group">
            <label>Số Phiếu Nhập</label>
            <input asp-for="Bai7.So_Phieu_Nhap_Kho" disabled class="form-control" />
        </div>
        <div class="form-group">
            <label>Ghi Chú</label>
            <input asp-for="Bai7.Ghi_Chu" disabled class="form-control" />
        </div>
        <input type="hidden" name="bai7Id" value="@Model.Bai7.Id" />
        <input type="hidden" name="bai7_2Id" value="@Model.Bai7_2.Id" />
        <button type="submit" class="btn btn-danger"> Delete </button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
}
else
{
    <h2>Bạn không có quyền truy cập vào trang này.</h2>
}